{
    "manifest_version": 3,
    "name": "YT Clickbait Detector",
    "description": "Extension to detect clickbait on YouTube",
    "version": "1.0",
    "permissions": [
        "contextMenus",
        "tabs",
        "activeTab"
    ],
    "background": {
        "service_worker": "src/service_worker.js"
    },
    "host_permissions": [
        "https://youtube.com/*",
        "https://youtu.be/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "*://*.youtube.com/*",
                "*://*.youtu.be/*"
            ],
            "js": [
                "src/content.js"
            ],
            "css": [
                "css/style.css"
            ],
            "all_frames": false,
            "run_at": "document_start"
        }
    ],
    "action": {
        "default_popup": "images/hello.html",
        "default_icon": "images/hello_extensions.png"
    }
}